kubeStateMetrics:
  enabled: {{ .Values.kubeStateMetrics.enabled | default false }}

{{- if .Values.kubeStateMetrics.enabled }}
kube-state-metrics:
  {{- if hasKey .Values "affinity"}}
  {{- if and .Values.affinity.nodeLabelKey .Values.affinity.nodeLabelValue }}
  affinity:
    nodeAffinity:
      requiredDuringSchedulingIgnoredDuringExecution:
        nodeSelectorTerms:
          - matchExpressions:
            - key: {{ .Values.affinity.nodeLabelKey }}
              operator: In
              values:
                - "{{ .Values.affinity.nodeLabelValue }}"
  {{- end }}
  {{- end }}
  prometheus:
    monitor:
      enabled: false
{{- end }}